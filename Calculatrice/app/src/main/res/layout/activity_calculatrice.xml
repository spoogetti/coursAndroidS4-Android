<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    tools:context=".Calculatrice">

    <EditText
        android:id="@+id/calculResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number" />

    <Button
        android:id="@+id/b_fois"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/b_fois"
        android:onClick="onClick"/>

    <Button
        android:id="@+id/b_diviser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/b_diviser"
        android:onClick="onClick"/>

    <Button
        android:id="@+id/b_moins"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/b_moins"
        android:onClick="onClick" />

    <Button
        android:id="@+id/b_plus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/b_plus"
        android:onClick="onClick" />


    <Button
        android:id="@+id/b_egal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/b_egal"
        android:onClick="onClick" />

</LinearLayout>